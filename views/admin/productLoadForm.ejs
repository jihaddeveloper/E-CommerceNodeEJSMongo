<% layout('layoutPage') -%>

<div class="container" style="width:70%; min-height: 700px">
    <div class="well">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center">Add a new Category</h3>

                    <% if (message.length > 0) { %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= message %>
                        </div>
                    <% } %>

                    <form method="POST" action="/add-product">

                        <div class="form-group">
                            <label for="category">Select Category </label>
                                <select name="categoryName">
                                        <option selected>Choose...</option>
                                    <% for(var i = 0; i < categories.length; i++) { %>
                                        <option value='<%= categories[i].name %>'><%= categories[i].name %></option>
                                    <% } %>
                                </select>
                        </div>
                        <div class="form-group">
                            <label for="name">Product Name </label>
                            <input type="text" class="form-control" name="name" value="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="brand">Barnd </label>
                            <input type="text" name="brand" class="form-control" value="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="price">Price </label>
                            <input type="number" name="price" class="form-control" value="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="description">Description  </label>
                            <input type="text" name="description" class="form-control" value="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity  </label>
                            <input type="number" name="quantity" class="form-control" value="" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="image">Image  </label>
                            <input type="file" name="image" class="form-control" accept="image/png, image/jpeg">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>