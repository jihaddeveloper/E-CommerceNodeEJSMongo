<% layout('layoutPage') -%>

<div class="container" style="width:70%; min-height: 700px; margin-top: 100px">
    <div class="well">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center">Edit Profile</h3>

                    <% if (message.length > 0) { %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= message %>
                        </div>
                    <% } %>

                    <form method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" name="name" value="<%= user.profile.name %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" name="email" value="<%= user.email %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="contact">Contact</label>
                                <input type="text" name="contact" class="form-control" value="<%= user.contact %>" placeholder="">
                        </div>
                        <div class="form-check">
                            <label for="isSeller">Is Seller</label>
                            <input type="checkbox" name="isSeller" class="form-check-input" <%= user.isSeller ? 'checked' : '' %>>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>