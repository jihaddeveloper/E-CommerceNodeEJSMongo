<% layout('layoutPage') -%>

<div class="container" style="width:70%; min-height: 700px; margin-top: 100px">
    <div class="well">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card card-body">
                    <h3 class="text-center">Edit Profile</h3>

                    <% if (message.length > 0) { %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <%= message %>
                        </div>
                    <% } %>

                    <form method="POST">
                        <div class="form-group">
                            <label for="name">Address 1</label>
                            <input type="text" class="form-control" name="address1" value="<%= user.address.address1 %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="email">Address 2</label>
                                <input type="text" class="form-control" name="address2" value="<%= user.address.address2 %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="contact">City</label>
                                <input type="text" name="city" class="form-control" value="<%= user.address.city %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="contact">District</label>
                                <input type="text" name="district" class="form-control" value="<%= user.address.district %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="contact">Country</label>
                                <input type="text" name="country" class="form-control" value="<%= user.address.country %>" placeholder="" required>
                        </div>
                        <div class="form-group">
                                <label for="contact">Postal Code</label>
                                <input type="text" name="postalCode" class="form-control" value="<%= user.address.postalCode %>" placeholder="" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>