<% layout('layoutPage') -%>

<div class="container" style="width:70%; min-height: 700px">
  <div class="well">
    <div class="row">
      <div class="col-md-12 mx-auto">
        <div class="card card-body">
          <h3 class="text-center">Add New Subcategory</h3>

          <% if (errors.length > 0) { %>
          <div class="alert alert-danger alert-dismissible">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= errors %>
          </div>
          <% } %> <% if (message.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= message %>
          </div>
          <% } %>

          <form method="POST" action="/add-subcategory">
            <div class="form-group">
              <label for="category">Category</label>
              <select name="category">
                <option selected>Choose...</option>
                <% for(var i = 0; i < secondHandProductCategories.length; i++) {
                %>
                <option value="<%= secondHandProductCategories[i]._id %>"
                  ><%= secondHandProductCategories[i].name %></option
                >
                <% } %>
              </select>
            </div>

            <div class="form-group">
              <label for="subcategory">Sub Category</label>
              <input
                type="text"
                class="form-control"
                name="subcategory"
                id="subcategory"
                value=""
                placeholder=""
              />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
