<% layout('layoutPage') -%>

<div class="container" style="margin-top: 100px; height: 400px; width: 400px">
  <div class="well">
    <div class="row">
      <div class="col-md-12 mx-auto">
        <div class="card card-body">
          <% if (message.length > 0) { %>
          <div class="alert alert-success alert-dismissible">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= message %>
          </div>
          <% } %> <% if (errors.length > 0) { %>
          <div class="alert alert-danger alert-dismissible">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= errors %>
          </div>
          <% } %>
          <h2>
            Thank you for signup, now please verify the email by clicking on
            "Verify"
          </h2>
        </div>
      </div>
    </div>
  </div>
</div>
