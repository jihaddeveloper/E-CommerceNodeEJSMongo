<% layout('layoutPage') -%>

<div class="container" style="width:100%; min-height: 700px">

    <% if(products) { %>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                <% for( var i=0; i < products.length; i++) { %>
                <li class="list-group-item">
                    <strong><%= products[i].item.name %></strong>
                    <span class="badge"><%= products[i].quantity %></span>
                    <span class="label label-success">$<%= products[i].price %></span>
                    <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" type="button">Action</button>
                            <ul class="dropdown-menu">
                                <li><a href="">Increase by 1</a></li>
                                <li><a href="">Reduce by 1</a></li>
                                <li><a href="">Remove</a></li>
                            </ul>
                    </div>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total:<%= totalPrice%></strong>
        </div>
    </div>
    <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <button type="button" class="btn btn-primary">Proceed To Checkout</button>
            </div>
    </div>
    <% } else { %>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>NO Items in Cart</h2>
        </div>
    </div>
    <% } %>
</div>