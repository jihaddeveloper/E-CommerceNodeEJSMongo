<% layout('layoutPage') -%>

<div class="container" style="margin-top: 100px; width:100%; min-height: 700px">
    <div class="row">
        <div class="col-sm-6 col-md- 4 col-md-offset-4 col-sm-offset-3">
            <p style="color: red">N.B. Standard Curirer Charge will be applied for Product delivery to other city of Dhaka</p>
            <h1>Checkout</h1>
            <% if(totalCartPrice) { %>
            <h4>Total Amount: $</h4>
            <h4 id="totalAmount"><%= totalCartPrice %></h4>
            <% } %>
            <div id="payment-errors" class="alert alert-danger hidden"></div>
            <form action="/stripe-payment" method="POST" id="stripe-checkout-form">
                <div class="row">
                    <h2>Shipping Information</h2>
                    <div class="col-xs-12">
                        <div class="form-group">
                            <input type="text" id="name" name="name" class="form-control" placeholder="Name" required>
                        </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="tel" id="phone" name="phone" class="form-control" placeholder="Phone" required>
                            </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <textarea type="text" id="address" name="address" class="form-control" rows="3" placeholder="Address" required></textarea>
                            </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="text" id="city" name="city" class="form-control" placeholder="City" required>
                            </div>
                    </div>
                    <!-- <div class="col-xs-12">
                            <div class="form-group">
                                <label for="division">Select Division</label>
                                <select class="form-control" id="division" name="division" onchange="setTotal()" required>
                                        <option value="100">Dhaka (Charge-100)</option>
                                        <option value="200">Chittagong (Charge-200)</option>
                                        <option value="200">Khulna (Charge-200)</option>
                                        <option value="200">Sylhet (Charge-200)</option>
                                        <option value="200">Rangpur (Charge-200)</option>
                                </select>
                            </div>
                    </div>
                    <h4>With Shipping Charge, Total: $</h4>
                    <p id="finalTotalAmount" name="finalTotalAmount"></p> -->
                    <h2>Payment Method</h2>
                    <div class="col-xs-12">
                        <div class="form-group">
                            <select class="form-control" id="paymentMethod" name="paymentMethod" required>
                                    <option>Card Payment</option>
                                    <option>Cash On Delivery</option>
                            </select>
                        </div>
                    </div>
                    <h2>Stripe Card Information</h2>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="text" id="card-name" class="form-control" placeholder="Card Holder Name" required>
                            </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="text" id="card-number" class="form-control" placeholder="Card Number" required>
                            </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    <input type="text" id="card-expiry-month" class="form-control" placeholder="Expiration Month" required>
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <div class="form-group">    
                                    <input type="text" id="card-expiry-year" class="form-control" placeholder="Expiration Year" required>
                                </div>    
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="text" id="card-cvc" class="form-control" placeholder="CVC" required>
                            </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        </div>
    </div>
</div>

