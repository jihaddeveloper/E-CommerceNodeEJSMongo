<% layout('layoutPage') -%>

<div class="container">
  <% if (errors.length > 0) { %>
  <br />
  <br />
  <br />
  <div class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= errors %>
  </div>

  <% } %> <% if (message.length > 0) { %>
  <br />
  <br />
  <br />
  <div class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= message %>
  </div>
  <% } %>
</div>

<div class="container" style="margin-top: 100px">
  <div class="row" id="">
    <Center>
      <h1><strong>All Second-Hand Products</strong></h1>
    </Center>
    <% if( products ) { %> <% for ( var i = 0; i < products.length; i++ ) { %>
    <div class="col-md-4">
      <div class="thumbnail">
        <a role="button" href="">
          <%if (products[i].image) {%>
          <img src="" height="50%" width="50%" />
          <% } %>
          <div class="caption">
            <h3>
              <%= products[i].name %>
            </h3>
            <p>
              <%= products[i].price %>TK
            </p>
          </div>
          <div>
            <p><%= products[i].secondHandProductCategory.name %></p>
            <p>Added Date:</p>
            <h4>
              <%= moment(products[i].created).format("YYYY-MM-DD HH:mm") %>
            </h4>
          </div>
        </a>
        <br />
      </div>
    </div>
    <% } %> <% } %>
  </div>
</div>
