    <div class="row" id="slidder">
            <h1><strong>Slidder</strong></h1>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
            
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                  <div class="item active">
                    <img src="/assets/images/macbook-air.jpg" alt="Los Angeles" style="width:60%;height:60%;">
                  </div>
            
                  <div class="item">
                    <img src="/assets/images/Sony-Alpha.png" alt="Chicago" style="width:60%;height:40%;">
                  </div>
                
                  <div class="item">
                    <img src="/assets/images/dell-inspiron.jpg" alt="New york" style="width:60%;height:60%;">
                  </div>
                </div>
            
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
    </div>
    
    <div class="row" id="dealsOfDayProducts">
        <h1><strong>Today's Deals</strong></h1>
        <% if( products ) { %>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                    <div class="thumbnail">
                        <%if (products[i].image) {%>
                        <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                        <% } %>
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].categoryName %>
                            </p>
                            <% if(products[i].subcategoryName) { %>
                                <p>
                                    <%= products[i].subcategoryName %>
                                </p>
                            <% } %>
                            <p><%= products[i].brandName %></p>
                            <p>$
                                <%= products[i].unitPrice %>.00
                            </p>
                        </div>
                        <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
        <% } %>
    </div>
