                        <p><%= products[i].brand.name %></p>
                        <p>$
                            <%= products[i].productPrice.listPrice %>.00
                        </p>
                    </div>
                    <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
            </div> 
        </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i = 1; i <= pages; i++ ) { %>
                <% if(i === 1) { %>
            <li><a href="/">
                    <%= i %></a></li>
            <% } else { %>
            <li><a href="/page/<%= i %>">
                    <%= i %></a></li>
            <% } %>
            <% } %>
            </li>
        </ul>

    </div>
</div>