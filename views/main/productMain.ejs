<% layout('layoutPage') -%>

<div class="jumbotron">
    <div class="container">
        <h3 class="text-center"> Welcome here, Everest Computers Ltd.</h3>
        <p class="text-center">Find all your desired computer related products from ECL.</p>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form class="form-inline" method="POST" action="/search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search...">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" style="width:100%; min-height: 700px">
            
    <div class="row">
        <div class="col-md-3">
                <h1><strong>Categories</strong></h1>
                <div class="col-xs-6">
                    <div class="dropdown">                
                        <a id="dLabel" role="button" data-toggle="dropdown" class=" btn btn-sm btn-success" data-target="hash" href="hash" aria-expanded="true">Categories<span class="caret"></span></a>
                        <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                            <% for(var i = 0; i < categories.length; i++) { %>
                                <li class="dropdown-submenu pull-right1"><a tabindex="-1" href="/products/<%= categories[i].id %>"><%= categories[i].name %></a>
                                    <ul class="dropdown-menu">
                                        <% for(var j = 0; j < S_categories[i].length; j++) { %>
                                            <li class="dropdown-submenu pull-right2"><a tabindex="-1" data-target="EMPLOYEE" href="/products/subCategory/<%= S_categories[i][j].id %>"><%= S_categories[i][j].name %></a>
                                                <ul class="dropdown-menu pull-right2">
                                                    <li><a href="#" data-list-option="all" data-func="list-functions">ABC Brand</a></li>
                                                </ul>
                                            </li>
                                        <% } %>
                                    </ul>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
        </div>
        <div class="col-md-6">
            <h1><strong>Promotion</strong></h1>
        </div>
        <div class="col-md-3">
            <h1><strong>Cart View</strong></h1>
        </div>
        
    </div>
    
    <div class="row" id="slidder">
            <h1><strong>Slidder</strong></h1>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
            
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                  <div class="item active">
                    <img src="/assets/images/macbook-air.jpg" alt="Los Angeles" style="width:60%;height:60%;">
                  </div>
            
                  <div class="item">
                    <img src="/assets/images/Sony-Alpha.png" alt="Chicago" style="width:60%;height:40%;">
                  </div>
                
                  <div class="item">
                    <img src="/assets/images/dell-inspiron.jpg" alt="New york" style="width:60%;height:60%;">
                  </div>
                </div>
            
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
    </div>
    
    <div class="row" id="dealsOfDayProducts">
        <h1><strong>Today's Deals</strong></h1>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].subcategory.category.name %>
                            </p>
                            <p>
                                <%= products[i].subcategory.name %>
                            </p>
                            <p><%= products[i].brand.name %></p>
                            <p>$
                                <%= products[i].productPrice.listPrice %>.00
                            </p>
                        </div>
                        <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
    </div>
