<% layout('layoutPage') -%>



    <div class="container">
        <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                    <h1>Col-3</h1>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="row" id="slidder">
                                <div id="myCarousel" class="carousel slide" data-ride="carousel">     
                                    <ol class="carousel-indicators">
                                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                        <li data-target="#myCarousel" data-slide-to="1"></li>
                                        <li data-target="#myCarousel" data-slide-to="2"></li>
                                    </ol>        
                            
                                    <div class="carousel-inner">
                                        <div class="item active">
                                            <img src="/assets/images/5.png" alt="">
                                        </div>
                                    
                                        <div class="item">
                                            <img src="/assets/images/2.png" alt="">
                                        </div>
                                        <div class="item">
                                            <img src="/assets/images/4.png" alt="">
                                        </div>
                                    </div>
                    
                                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                        <span class="glyphicon glyphicon-chevron-right"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <h1>Col-3</h1>
                </div>
        </div>      
    </div> 

<div class="container"> 
    
    <div class="row" id="dealsOfDayProducts">
        <h1><strong>Today's Deals</strong></h1>
        <% if( products ) { %>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                <div class="thumbnail">
                    <%if (products[i].image) {%>
                    <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                    <% } %>
                    <div class="caption">
                        <h3>
                            <%= products[i].name %>
                        </h3>
                        <p>
                            <%= products[i].categoryName %>
                        </p>
                        <% if(products[i].subcategoryName) { %>
                            <p>
                                <%= products[i].subcategoryName %>
                            </p>
                        <% } %>
                        <p><%= products[i].brandName %></p>
                        <p>TK
                            <%= products[i].unitPrice %>
                        </p>
                    </div>
                    <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
        <% } %>
    </div>
