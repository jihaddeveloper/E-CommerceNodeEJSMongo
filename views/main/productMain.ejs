<div class="container" style="width:100%; min-height: 700px">

    <div class="row" id="searchResults">
        <% for ( var i = 0; i < products.length; i++ ) { %>
        <div class="col-md-4">
            
                <div class="thumbnail">
                    <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                    <div class="caption">
                        <h3>
                            <%= products[i].name %>
                        </h3>
                        <p>
                            <%= products[i].category.name %>
                        </p>
                        <p>$
                            <%= products[i].price %>.00</p>
                    </div>
                    <% if (user) { %>
                    <input type="hidden" name="product_id" id="product_id" value="<%= products[i]._id %>">
                    <input type="hidden" name="priceHidden" id="priceHidden" value="<%= products[i].price %>">
                    <input type="hidden" class="form-control" readonly name="item" id="item" value="<%= products[i].name %>">
                    <input type="hidden" class="form-control" readonly name="priceValue" id="priceValue" value="<%= products[i].price %>">
                    <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Add to Cart</a>
                    <% } else { %>
                    <a href="/signup" class="btn btn-primary btn-md">Add to Cart</a>
                    <% } %>
                    <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>"> Details</a>
                </div>
                
            
        </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i = 1; i <= pages; i++ ) { %>
                <% if(i === 1) { %>
            <li><a href="/">
                    <%= i %></a></li>
            <% } else { %>
            <li><a href="/page/<%= i %>">
                    <%= i %></a></li>
            <% } %>
            <% } %>
            </li>
        </ul>

    </div>
</div>