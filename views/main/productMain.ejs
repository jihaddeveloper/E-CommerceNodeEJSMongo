<% layout('layoutPage') -%>

<div class="jumbotron">
        <div class="container">
          <h3 class="text-center"> Welcome here, Everest Computers Ltd.</h3>
          <p class="text-center">Find all your desired computer related products from ECL.</p>
          <div class="row">
                <div class="col-md-6 col-md-offset-3" >
                        <div class="input-group" >
                          <input type="text" class="form-control input" id="search" name="search_term" placeholder="Search" id="txtSearch"/>
                          <div class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                              <span class="glyphicon glyphicon-search"></span>
                            </button>
                          </div>
                        </div>
                </div>
          </div>
        </div>
</div>

<div class="container" style="width:100%; min-height: 700px">
    
    <div class="row" id="searchResults">
        <% for ( var i = 0; i < products.length; i++ ) { %>
        <div class="col-md-4">
            <a href="/product/<%= products[i]._id %>">
                <div class="thumbnail">
                    <img src="<%= products[i].image %>">
                    <div class="caption">
                        <h3><%= products[i].name %></h3>
                        <p><%= products[i].category.name %></p>
                        <p>$<%= products[i].price %>.00</p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i = 1; i <= pages; i++ ) { %>
                    <% if(i === 1) { %>
                        <li><a href="/"><%= i %></a></li>
                    <% } else { %>
                        <li><a href="/page/<%= i %>"><%= i %></a></li>
                    <% } %>
                <% } %>
            </li>
        </ul>

    </div>
</div>