<% layout('layoutPage') -%>

<div class="jumbotron">
    <div class="container">
        <h3 class="text-center"> Welcome here, Everest Computers Ltd.</h3>
        <p class="text-center">Find all your desired computer related products from ECL.</p>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form class="form-inline" method="POST" action="/search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search...">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" style="width:100%; min-height: 700px">

    <div class="row">
        <div class="col-md-2">
            <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown-submenu">
                        <a id="dLabel" role="button" data-toggle="dropdown" class="btn btn-primary" data-target="#" href="#">
                          Categories <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
                          <% for(var i = 0; i < categories.length; i++) { %>
                          <li><a href="/products/<%= categories[i].id %>""><%= categories[i].name %></a></li>
                          <% for(var j = 0; j < S_categories[i].length; j++) { %>
                            <a href="/products/subCategory/<%= S_categories[i][j].id %>""> <%= S_categories[i][j].name %></a><br>
                            <% } %>
                          <% } %>
                        </ul>
                    </li>
            </ul>
        </div>
        <div class="col-md-8">
            Promotions
        </div>
        <div class="col-md-2">
                Profile
        </div>
    </div>
    
    <div class="row" id="slidder">
            <h1><strong>Slidder</strong></h1>
    </div>
    
    
    <div class="row" id="dealsOfDayProducts">
        <h1><strong>Today's Deals</strong></h1>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].subcategory.category.name %>
                            </p>
                            <p>
                                <%= products[i].subcategory.name %>
                            </p>
                            <p><%= products[i].brand.name %></p>
                            <p>$
                                <%= products[i].productPrice.listPrice %>.00
                            </p>
                        </div>
                        <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
    </div>
    <div class="row" id="exclusiveProduct">
        <h1><strong>Exclusive Products</strong></h1>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].subcategory.category.name %>
                            </p>
                            <p>
                                <%= products[i].subcategory.name %>
                            </p>
                            <p><%= products[i].brand.name %></p>
                            <p>$
                                <%= products[i].productPrice.listPrice %>.00
                            </p>
                        </div>
                        <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
    </div>
    <div class="row" id="trendingProduct">
        <h1><strong>Trending Products</strong></h1>
        <% for ( var i = 0; i < products.length; i++ ) { %>
            <div class="col-md-4">
                    <div class="thumbnail">
                        <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                        <div class="caption">
                            <h3>
                                <%= products[i].name %>
                            </h3>
                            <p>
                                <%= products[i].subcategory.category.name %>
                            </p>
                            <p>
                                <%= products[i].subcategory.name %>
                            </p>
                            <p><%= products[i].brand.name %></p>
                            <p>$
                                <%= products[i].productPrice.listPrice %>.00
                            </p>
                        </div>
                        <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
                </div> 
            </div>
        <% } %>
    </div>

    <div class="row" id="searchResults">
        <h1><strong>All Products</strong></h1>
        <% for ( var i = 0; i < products.length; i++ ) { %>
        <div class="col-md-4">
                <div class="thumbnail">
                    <img src="data:image/png;base64, <%= products[i].image %>" height="100" width="100">
                    <div class="caption">
                        <h3>
                            <%= products[i].name %>
                        </h3>
                        <p>
                            <%= products[i].subcategory.category.name %>
                        </p>
                        <p>
                            <%= products[i].subcategory.name %>
                        </p>
                        <p><%= products[i].brand.name %></p>
                        <p>$
                            <%= products[i].productPrice.listPrice %>.00
                        </p>
                    </div>
                    <a role="button" class="btn btn-primary btn-md" href="/product/<%= products[i]._id %>">Details</a>
            </div> 
        </div>
        <% } %>

        <ul class="pagination text-center">
            <li>
                <% for(var i = 1; i <= pages; i++ ) { %>
                <% if(i === 1) { %>
            <li><a href="/">
                    <%= i %></a></li>
            <% } else { %>
            <li><a href="/page/<%= i %>">
                    <%= i %></a></li>
            <% } %>
            <% } %>
            </li>
        </ul>

    </div>
</div>