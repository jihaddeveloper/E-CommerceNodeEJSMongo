                            </tr>
                            <tr>
                                <td><i class="fa fa-microchip" aria-hidden="true"></i> Processor</td>
                                <td><a data-toggle="modal" href="#cpuModal" class="btn btn-primary btn-sm">Choose</a></td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-thermometer-half" aria-hidden="true"></i> Processor Cooler</td>
                                <td><a href="#" class="btn btn-primary btn-sm">Choose</a></td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-sliders" aria-hidden="true"></i> RAM-1</td>
                                <td><a data-toggle="modal" href="#ramModal" class="btn btn-primary btn-sm">Choose</a></td>
                            </tr>
                            <tr>
