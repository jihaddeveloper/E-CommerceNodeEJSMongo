                                <td><a data-toggle="modal" href="#casingModal" class="btn btn-primary btn-sm">Choose</a></td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-television" aria-hidden="true"></i> Monitor</td>
                                <td><a href="#" class="btn btn-primary btn-sm">Choose</a></td>
                            </tr>
                            <tr>
                                <td><i class="fa fa-keyboard-o" aria-hidden="true"></i> Keyboard</td>
