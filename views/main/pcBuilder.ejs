        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                <% if(pcBuilder) { %>
                    <table class="table table-bordered">
                      <tr>
                        <th class="text-center">Image</th>
                        <th class="text-center">Title</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Unit Price</th>
                        <th class="text-center">Action</th>
                      </tr>
                      <% for(var i = 0; i < pcBuilder.length; i++) { %>
                      <tr>
                        <td><img class="img-fluid img-thumbnail" style="width: 10%; height: 10%;" src="data:image/png;base64, <%= pcBuilder[i].image %>"></td>
                        <td>
                          <%= pcBuilder[i].title %>
                        </td>
                        <td>
                          <%= pcBuilder[i].quantity %>
                        </td>
                        <td>
                          <%= pcBuilder[i].unitPrice %>TK
                        </td>
                        <td><a href="/pcBuilder/remove/<%= pcBuilder[i].product_id %>" class="btn btn-danger btn-sm">Remove</a></td>
                      </tr>
                      <% } %>
                      <tr>
                        <td colspan="6" style="text-align:right;">
                          <b>Total:
                            <%= pcBuilderTotalPrice %>TK</b>
                        </td>
                      </tr>
                    </table>
                    <% } else { %>
                    <h3 class="text-center">Empty Quotation</h3>
                    <% } %>
        </div>
    </div>
    
</div>

<!--Mother Board  Modal -->
<div class="modal fade" id="motherBoardModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
