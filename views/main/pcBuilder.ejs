                    <h4 class="modal-title">All Mother Board</h4>
                </div>
                <div class="modal-body">
    
                    <% if(allMotherBoard) { %>
                    <table class="table table-bordered">
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Unit Price</th>
                            <th>Action</th>
                        </tr>
                        <% for(var i = 0; i < allMotherBoard.length; i++) { %>
                        <tr>
                            <td><img class="img-fluid img-thumbnail" src="data:image/png;base64, <%= allMotherBoard[i].image %>"></td>
                            <td>
                                <%= allMotherBoard[i].name %>
                            </td>
                            <td>
                                <%= allMotherBoard[i].unitPrice %>TK
                            </td>
                            <td>
                                <a href="/add-to-pcBuilder/<%= allMotherBoard[i]._id %>" class="btn btn-primary btn-sm">Add To List</a><br>
                                <a href="/product/<%= allMotherBoard[i]._id %>" class="btn btn-primary btn-sm">Product Deatils</a>
                            </td>
                        </tr>
                        <% } %>
                    </table>
                    <% } else { %>
                    <h3 class="text-center">No Item found...</h3>
                    <% } %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
