<% layout('layoutPage') -%>

<div class="container" style="width:100%; min-height: 700px">
    <div class="row">
        <div class="col-sm-6 col-md- 4 col-md-offset-4 col-sm-offset-3">
            <br>
            <br>
            <p style="color: red">N.B. Standard Curirer Charge will be applied for Product delivery to other city outside of Dhaka</p>
            <h1>Checkout</h1>
            <% if(totalCartPrice) { %>
            <h4>Total Amount: TK</h4>
            <h4 id="totalAmount"><%= totalCartPrice %></h4>
            <% } %>
            <form action="/payment" method="POST" id="stripe-checkout-form">
                <div class="row">
                    <h2>Shipping Address</h2>
                    <div class="col-xs-12">
                        <div class="form-group">
                            <input type="text" id="name" name="name" class="form-control" placeholder="Name" required>
                        </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <input type="tel" id="phone" name="phone" class="form-control" maxlength="14" minlength="11" placeholder="Please supply a valid phone number in the form 01XXXXXXXXX or +8801XXXXXXXXX" required>
                            </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <textarea type="text" id="address" name="address" class="form-control" rows="3" placeholder="Address" required></textarea>
                            </div>
                    </div>
                    <div class="col-xs-12">
                            <div class="form-group">
                                <label for="city">Select City</label>
                                <select class="form-control" id="city" name="city" onchange="setTotal()" required>
                                        <option value="Dhaka">Dhaka</option>
                                        <option value="Chittagong">Chittagong</option>
                                        <option value="Khulna">Khulna</option>
                                        <option value="Sylhet">Sylhet</option>
                                        <option value="Rangpur">Rangpur</option>
                                </select>
                            </div>
                    </div>

                    <h2>Shipping Charge</h2>
                    <input id="shipCharge" name="shipCharge" readonly> <p id="message"></p>
                    <h2>With Shipping Charge, Grand-Total: </h2>
                    <input id="finalTotalAmount" name="finalTotalAmount" readonly> <p id="message"></p>
                    <h2>Payment Method</h2>
                    <div class="col-xs-12">
                        <div id="payment1" class="form-group">
                            <select class="form-control" id="paymentMethod" name="paymentMethod">
                                    <option>Online Payment</option>
                                    <option>Cash On Delivery</option>
                            </select>
                        </div>
                    </div>
                    <div  class="col-xs-12">
                            <div id="payment2" class="form-group">
                                <select class="form-control" id="paymentMethod" name="paymentMethod">
                                        <option>Online Payment</option>
                                </select>
                            </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Place Order</button>
            </form>
        </div>
    </div>
</div>