<% layout('layoutPage') -%>

<div class="container" style="width:80%; min-height: 700px">
    <div class="row">
        <% for ( var i = 0; i < products.length; i++ ) { %>
        <div class="col-md-4">
            <a href="/product/<%= products[i]._id %>">
                <div class="thumbnail">
                    <img src="<%= products[i].image %>">
                    <div class="caption">
                        <h3><%= products[i].name %></h3>
                        <p><%= products[i].category.name %></p>
                        <p>$<%= products[i].price %>.00</p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div>