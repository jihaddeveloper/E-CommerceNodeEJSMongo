<% layout('layoutPage') -%>

<div class="container" style="margin-top: 100px">

    <% if (data.length === 0) { %>
        <h3><%= query %> not found</h3>
        <% } else { %>
            <h3>Results for <%= query %></h3> 
        <div class="row">
                <% for ( var i = 0; i < data.length; i++ ) { %>
                    <div class="col-md-4">
                        <a href="/product/<%= data[i]._id %>">
                            <div class="thumbnail">
                                <img src="data:image/png;base64, <%= data[i].image %>">
                                <div class="caption">
                                    <h3><%= data[i].name %></h3>
                                    <p><%= data[i].categoryName %></p>
                                    <% if(data[i].subcategoryName) { %>
                                        <p><%= data[i].subcategoryName %></p>
                                    <% } %>
                                    <p><%= data[i].brandName %></p>
                                    <p><%= data[i].unitPrice %></p>
                                </div>
                            </div>
                        </a>
                    </div>
            <% } %>
        </div>
    <% } %>
</div>