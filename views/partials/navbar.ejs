<!-- HEADER -->
<header>
  <!-- top Header -->
  <div id="top-header">
    <div class="container">
      <div class="pull-left">
        <span>Welcome to ECL</span>
      </div>
      <div class="pull-right">
        <ul class="header-top-links">
          <li><a href="#">Store</a></li>
          <li><a href="#">Newsletter</a></li>
          <li><a href="#">FAQ</a></li>
          <li class="dropdown default-dropdown">
            <a
              class="dropdown-toggle"
              data-toggle="dropdown"
              aria-expanded="true"
              >ENG <i class="fa fa-caret-down"></i
            ></a>
            <ul class="custom-menu">
              <li><a href="#">English (ENG)</a></li>
              <li><a href="#">Russian (Ru)</a></li>
              <li><a href="#">French (FR)</a></li>
              <li><a href="#">Spanish (Es)</a></li>
            </ul>
          </li>
          <li class="dropdown default-dropdown">
            <a
              class="dropdown-toggle"
              data-toggle="dropdown"
              aria-expanded="true"
              >USD <i class="fa fa-caret-down"></i
            ></a>
            <ul class="custom-menu">
              <li><a href="#">USD ($)</a></li>
              <li><a href="#">EUR (â‚¬)</a></li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /top Header -->

  <!-- header -->
  <div id="header">
    <div class="container">
      <div class="pull-left">
        <!-- Logo -->
        <div class="header-logo">
          <a class="logo" href="/">
            <i class="fa fa-home"></i> ECL eCommerce
            <!-- <img src="../inc/img/logo.png" alt="" /> -->
          </a>
        </div>
        <!-- /Logo -->

        <!-- Search -->
        <div class="header-search" style="width: 600px;">
          <form
            action="/search"
            method="POST"
            role="search"
            style="width: 600px;"
          >
            <input
              class="input search-input"
              type="text"
              placeholder="Search Product Here ..."
              name="q"
              style="width: 600px;"
            />
            <select class="input search-categories">
              <option value="">All Categories</option>
              <% if(categories) { %> <% for(var i = 0; i < categories.length;
              i++) { %> 
              <option value="<%= categories[i].id %>"
                ><%= categories[i].name %></option
              >
              <% } %> <% } %> 
            </select>
            <button class="search-btn" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </form>
        </div>
        <!-- /Search -->
      </div>
      <div class="pull-right">
        <ul class="header-btns">
          <!-- Account -->
          <li class="header-account dropdown default-dropdown">
            <% if(user) { %>
            <div
              class="dropdown-toggle"
              role="button"
              data-toggle="dropdown"
              aria-expanded="true"
            >
              <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
              </div>
              <strong class="text-uppercase"
                ><%= user.profile.name %> <i class="fa fa-caret-down"></i
              ></strong>
            </div>
            
            <ul class="custom-menu">
              <li>
                <a href="/profile"><i class="fa fa-user-o"></i> Profile</a>
              </li>
              <li>
                <a href="/wishlis"><i class="fa fa-heart-o"></i> My Wishlist</a>
              </li>
              <li><a href="/checkout"><i class="fa fa-shopping-cart"></i>Cart</a></li>
              <!-- <li>
                <a href="#"><i class="fa fa-exchange"></i> Compare</a>
              </li>
              <li>
                <a href="#"><i class="fa fa-check"></i> Order List</a>
              </li> -->
              <li>
                <a href="/logout"><i class="fa fa-unlock-alt"></i> Logout</a>
              </li>
            </ul>
            <% } else { %>
              <div class="header-btns-icon">
                <i class="fa fa-user-o"></i>
              </div>
              <a href="/login" class="text-uppercase">Login</a> /
              <a href="/signup" class="text-uppercase">Join</a>
            <% } %>
          </li>
          <!-- /Account -->

          <!-- Cart -->
          <li class="header-cart dropdown default-dropdown">
            <a
              class="dropdown-toggle"
              data-toggle="dropdown"
              aria-expanded="true"
            >
              <div class="header-btns-icon">
                <i class="fa fa-shopping-cart"></i>
                <% if(cart) { %>
                  <span class="qty"><%= cart.length %></span>
                <% } else { %>
                  <span class="qty">0</span>
                  <% } %>
              </div>
              <strong class="text-uppercase">My Cart:</strong>
              <br />
              <% if(cart) { %>
                <% var total = 0; %> <% for(var i = 0; i < cart.length; i++) {
                  %> <% var subtotal = parseFloat(cart[i].unitPrice *
                  cart[i].quantity) %> <% var total = (total) + (subtotal) %>
                  <% } %>
              <span> <%= total %> TK</span>
               <% } else { %>
                <span> 0 TK</span>
                <% } %>
            </a>
            <div class="custom-menu">
              <div id="shopping-cart">
                <div class="shopping-cart-list">
                  <% if(cart) { %>
                    <% var total = 0; %> <% for(var i = 0; i < cart.length; i++) {
                      %> <% var subtotal = parseFloat(cart[i].unitPrice *
                      cart[i].quantity) %> <% var total = (total) + (subtotal) %>
                  <div class="product product-widget">
                    <div class="product-thumb">
                      <img class="product-image"
                      src="<%= cart[i].image %>" alt="" />
                    </div>
                    <div class="product-body">
                      <h3 class="product-price">
                        <%= cart[i].unitPrice %> TK<span class="qty">x <%= cart[i].quantity %></span>
                      </h3>
                      <h2 class="product-name">
                        <a href="#"><%= cart[i].title %></a>
                      </h2>
                    </div>
                    <button class="cancel-btn">
                      <i class="fa fa-trash"></i>
                    </button>
                  </div>
                  <% } %> <% } else { %>
                  <div class="product product-widget">
                    <h2 class="product-name">
                      <a href="#">No Product added ... !</a>
                    </h2>
                  </div>
                  <% } %>
                </div>
                <div class="shopping-cart-btns">
                  <button class="main-btn">Close</button>
                  <button class="primary-btn"><a href="/checkout"> View Cart</a><i class="fa fa-arrow-circle-right"></i>
                  </button>
                </div>
              </div>
            </div>
          </li>
          <!-- /Cart -->

          <!-- Mobile nav toggle-->
          <li class="nav-toggle">
            <button class="nav-toggle-btn main-btn icon-btn">
              <i class="fa fa-bars"></i>
            </button>
          </li>
          <!-- / Mobile nav toggle -->
        </ul>
      </div>
    </div>
    <!-- header -->
  </div>
  <!-- container -->
</header>
<!-- /HEADER -->
