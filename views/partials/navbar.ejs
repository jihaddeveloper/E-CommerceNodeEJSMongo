<!-- Short Cart View Modal -->
<div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true" data-backdrop="false">
        <div class="modal-dialog modal-sm">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Cart Items</h4>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h3>Items</h3>
              <br>
              <% if(userCart) { %>
              <% for (var i = 0; i < userCart.items.length; i++)  { %>
                <div class="list-group">
                    <span class="list-group-item">
                        <div class="row">
                            <div class="col-md-4">
                                <span><img class="product-image" style="width: 100%" src="data:image/png;base64, <%= userCart.items[i].item.image %>"></span>
                            </div>
                            <div class="col-md-4">
                                <p class="list-group-item-heading">
                                    <%= userCart.items[i].item.name %>
                                </p>
                            </div>
                            <div class="col-md-4">
                                <p>Qunantity:
                                    <%= userCart.items[i].quantity %>
                                </p>
                                <p>Price:
                                    <%= userCart.items[i].price %>
                                </p>
                            </div>
                        </div>
                    </span>
                </div>
                <% } %>
                <% } %>
            </div>
            <div class="modal-footer">
              <a type="button" class="btn btn-primary" href="/cart">Cart Details</a>
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
</div>
