<!DOCTYPE html>
<html lang="en">

<head>

  <title>ECL E-Commerce</title>

  <!-- <link rel="stylesheet" href="/css/bootstrap.min.css"> -->

  <link rel="stylesheet" href="/css/custom.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-social/5.1.1/bootstrap-social.css">

  <!-- New Multilevel Dropdown -->
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  <!-- New Multilevel Dropdown -->

  <!-- For Stripe -->
  <script src="//code.jquery.com/jquery-1.12.3.min.js"></script>
  <!-- For Stripe -->

</head>

<body>

  <% include ./partials/navbar %>

  <!-- Search Bar -->
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form class="form-inline" method="POST" action="/search">
          <div class="form-group">
            <input type="text" name="q" class="form-control" placeholder="Search...">
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Search Bar -->

  <!-- /container -->
  <div class="container-fluid">
    <div class="row">

      <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
        <!-- Body -->
        <%- body -%>
        <!-- Body -->
      </div>

      <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
        
        <!-- Cart View -->
        <% if(cart) { %>
          <h1 class="page-title">Cart Items</h1>
          <table id="tab" class="table table-striped alignmiddle">
              <tr>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Quantity</th>
                  <th>Unit Price</th>
                  <th>Actions</th>
                  <th>Subtotal</th>
              </tr>
              <% var total = 0; %>
              <% for(var i = 0; i < cart.length; i++) { %>
              <% var subtotal = parseFloat(cart[i].unitPrice * cart[i].quantity) %>
              <% var total = (total) + (subtotal) %>
              <tr>
                  <td><img class="product-image" style="width: 20%; height: 20%;" src="data:image/png;base64, <%= cart[i].image %>"></td>
                  <td><%= cart[i].title %></td>
                  <td><%= cart[i].quantity %></td>
                  <td>TK<%= cart[i].unitPrice %></td>
                  <td>
                      <a  class="btn" onclick="add1('<%= cart[i].product %>')"><b>(+)</b></a>&nbsp;
                      <br>
                      <a href="/cart/update/<%= cart[i].title %>?action=decrease"><b>(-)</b></a>&nbsp;
                      <br>
                      <a href="/cart/update/<%= cart[i].title %>?action=remove">(x)</a>&nbsp;
                  </td>
                  <td>TK<%= subtotal %></td>
              </tr>
              
          <% } %>
              <!-- <tr>
                  <td colspan="5" align="right"><b>Total: <%= total %>.00TK</b></td>
              </tr>
              <tr>
                  <td colspan="5" align="right">
                      <a class="clearcart btn btn-danger" href="/clear">Clear Cart</a>
                  </td>
                  <td colspan="5" align="right">
                      <a class="btn btn-success" href="/">Continue Shopping</a>
                  </td>
              </tr>
              <tr>
                  <td colspan="5" align="right">
                      <a class="btn btn-primary" href="/stripe-payment">Confirm Order</a>
                  </td>
              </tr> -->
          </table>
          <% } else { %>
              <h3 class="text-center">Your Cart is empty</h3>
          <% } %>
        <!-- Cart View -->
      </div>
    </div>

    <% include ./partials/footer %>

  </div> <!-- /container -->


  <% include ./partials/javaScript %>

</body>

</html>